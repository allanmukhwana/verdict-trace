# =============================================================================
# VerdictTrace Environment Configuration
# Copy this file to .env and fill in your actual values
# =============================================================================

# --- MySQL Database ---
DB_HOST=localhost
DB_PORT=3306
DB_NAME=verdict_trace
DB_USER=root
DB_PASS=

# --- Elasticsearch ---
ES_HOST=https://your-deployment.es.us-central1.gcp.cloud.es.io
ES_PORT=9243
ES_API_KEY=your_elasticsearch_api_key_here
ES_INDEX_COMPLAINTS=verdictrace_complaints
ES_INDEX_CASES=verdictrace_cases

# --- Elasticsearch Agent Builder (Kibana API) ---
KIBANA_URL=https://your-deployment.kb.us-central1.gcp.cloud.es.io
KIBANA_API_KEY=your_kibana_api_key_here

# --- LLM API (OpenAI or compatible) ---
LLM_API_URL=https://api.openai.com/v1/chat/completions
LLM_API_KEY=your_openai_api_key_here
LLM_MODEL=gpt-4o
LLM_EMBEDDING_URL=https://api.openai.com/v1/embeddings
LLM_EMBEDDING_MODEL=text-embedding-3-small

# --- Brevo Email API ---
BREVO_API_KEY=your_brevo_api_key_here
BREVO_SENDER_NAME=VerdictTrace
BREVO_SENDER_EMAIL=alerts@yourdomain.com

# --- Application ---
APP_URL=http://localhost:8080
APP_NAME=VerdictTrace
APP_ENV=development
APP_TIMEZONE=UTC
